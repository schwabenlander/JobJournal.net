@inherits LayoutComponentBase
@inject IJSRuntime JS

<NavBar />

<main class="container">
	<AuthorizeView>
		<Authorized>
			<form class="d-flex">
				<div class="input-group mt-4 mb-2">
					<input type="text" class="form-control" placeholder="Search..." aria-label="Search">
					<button class="btn btn-outline-secondary" type="button" id="searchbutton"><i class="bi bi-search"></i></button>
				</div>
			</form>
		</Authorized>
	</AuthorizeView>
	<div class="my-3 p-3 bg-white rounded shadow-sm">
		<!-- Conent goes here-->
		@Body
		<!-- End of content -->
	</div>
</main>

<footer>
	<div class="container py-3">
		<span class="text-muted copyright"
			>Copyright &copy; 2021 by JobJournal. All rights reserved.</span>
	</div>
</footer>

@code {
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await JS.InvokeVoidAsync("bindOffcanvasToggle");
		}
	}
}